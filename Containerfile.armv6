FROM ghcr.io/tunix/rust-arm32v6 AS builder

WORKDIR /usr/src/homebot
COPY . .

RUN apt-get update \
    && apt-get install -y pkg-config libssl-dev musl-dev \
    && rm -rf /var/lib/apt/lists/*

RUN rustup target add arm-unknown-linux-musleabihf \
    && cargo install --path --target=arm-unknown-linux-musleabihf .

FROM docker.io/arm32v5/debian:stable-slim

ENV RUST_LOG=info

RUN apt-get update \
    && apt-get install -y ca-certificates \
    && rm -rf /var/lib/apt/lists/*

COPY --from=builder /cargo/bin/home /usr/local/bin/home

ENTRYPOINT ["home"]
